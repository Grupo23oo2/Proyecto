<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
  
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_tp?serverTimezone=America/Argentina/Buenos_Aires</property>
    <property name="hibernate.connection.username">hibernate_tp</property>
    <property name="hibernate.connection.password">4231</property>

    <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.show_sql">true</property>

    <mapping resource="mapeos/Cliente.hbm.xml"/>
    <mapping resource="mapeos/Contacto.hbm.xml"/>
    <mapping resource="mapeos/Empleado.hbm.xml"/>
    <mapping resource="mapeos/Lugar.hbm.xml"/>
    <mapping resource="mapeos/Persona.hbm.xml"/>
    <mapping resource="mapeos/Servicio.hbm.xml"/>
  
  </session-factory>
</hibernate-configuration>
